{
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["next/core-web-vitals", "plugin:react/recommended"],
  "rules": {
    "prefer-const": "error",
    "no-console": "warn",
    "semi": "warn",
    "no-loop-func": "warn",
    "no-alert": "warn",
    "no-await-in-loop": "warn",
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": "warn",
    "no-multiple-empty-lines": "warn",
    "no-mixed-spaces-and-tabs": "warn",
    "no-multi-spaces": "warn"
  }
}
